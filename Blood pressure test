    <script>
        function checkEligibility() {
            // Retrieve form values
            const age = parseInt(document.getElementById('age').value);
            const weight = parseFloat(document.getElementById('weight').value);
            const temperature = parseFloat(document.getElementById('temperature').value);
            const pulse = parseInt(document.getElementById('pulse').value);
            const delivery = document.querySelector('input[name="delivery"]:checked').value;
            const bloodPressure = document.getElementById('bloodPressure').value;
            const hemoglobin = parseFloat(document.getElementById('hemoglobin').value);

            // Perform eligibility checks
            let eligibilityMessage = "Eligible for donation";

            if (age < 18 || age > 65) {
                eligibilityMessage = "Age is not within the eligible range (18-65 years).";
            } else if (weight < 45) {
                eligibilityMessage = "Weight is less than 45 kilograms.";
            } else if (/* Add more checks for other criteria */) {
                // Add more eligibility checks here
            }

            // Display result
            document.getElementById('result').textContent = eligibilityMessage;
        }
